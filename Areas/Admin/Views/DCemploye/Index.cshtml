@model GestionAbscences.Data.employe

@{
    ViewBag.Title = "Index";

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<title> DC D'un employe</title>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<div class="card shadow-lg border-0 rounded-lg mt-5 offset-2 col-8">
    <div class="card-header"><h3 class="text-center font-weight-bold my-auto"  >Demande de congé</h3></div>
    <div class="card-body offset-1">



    @using (Html.BeginForm("Index", "DCemploye", FormMethod.Post))

    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()


       

        <br>
        <div class="row">
            <div class="col-2">

                <label class="center-block text-center mb-10 " style="font-weight:bold;" >Matricule</label>
            </div>

            <div class="col-8">

                @Html.TextBoxFor(m => m.matricule, new { @class = "form-control py-4", placeholder = "Saisir le matricule" })


            </div>



        </div>

        <br>
        

       

        <div class="col-4  d-flex align-items-center justify-content-between offset-4">

            <button type="submit" class="btn btn-success col-7" style="font-weight:bold;" >Suivant</button>
        </div>
    }
</div>



    @if (ViewBag.message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("@ViewBag.message");
                    };
        </script>
    }
</div>